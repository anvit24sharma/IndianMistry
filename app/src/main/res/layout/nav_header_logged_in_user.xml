<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_electrician"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/profile_name"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/ic_action_name"
        android:layout_alignBottom="@+id/profile_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_id_textview"
        android:layout_alignStart="@+id/email_id_textview"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Indian Mistry"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/email_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="indianmistry.com"
        android:textSize="14sp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>
