<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.indianmistry.profile">


    <Button
        android:id="@+id/logout_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Logout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/email_id_textview"
        android:layout_alignStart="@+id/Phoneno_edittext"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RelativeOverlap"
        android:layout_below="@+id/edit_button"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Phoneno_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="phone NO."
        android:inputType="phone"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/ic_action_name"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_below="@+id/Phoneno_edittext"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/email_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/save_button"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="44dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

</RelativeLayout>
