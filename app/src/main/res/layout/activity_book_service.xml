<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.indianmistry.book_service">

    <TextView
        android:id="@+id/problem_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="68dp"
        android:text=" Problem Description will appear here..."
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/location_picker"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:layout_above="@+id/book"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="75dp"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/landmark"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="17dp"
        android:inputType="textMultiLine"
        android:maxHeight="140dp"

        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Enter Your Landmark"
        android:padding="10dp"
        android:layout_alignTop="@+id/location_picker"
        android:layout_alignStart="@+id/book"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/book"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Book"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/problem_desc"
        android:layout_marginBottom="26dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/landmark"
        android:layout_centerVertical="true"
        android:layout_marginEnd="63dp"
        android:text="Location"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

</RelativeLayout>
